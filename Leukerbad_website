<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fullscreen Overlay with URL and Close Button</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    /* Fullscreen overlay container */
    #overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent background */
      z-index: 9999;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    /* Fullscreen iframe for the website */
    iframe {
      width: 90%;
      height: 90%;
      border: none;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    }

    /* Close button styling */
    .close-btn {
      position: absolute;
      top: 15px;
      right: 15px;
      background-color: #ff5c5c;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      z-index: 10000;
    }

    .close-btn:hover {
      background-color: #ff3030;
    }
  </style>
</head>
<body>
  <script>
    // Set the website URL here for easy customization
    const websiteURL = "https://leukerbad.ch/en";
  </script>

  <!-- Overlay containing the iframe and close button -->
  <div id="overlay">
    <!-- Close button -->
    <button class="close-btn" onclick="closeWindow()">Close Window</button>
    <!-- Website iframe with updated sandbox to allow touch and zoom -->
    <iframe id="websiteFrame" src="" sandbox="allow-scripts allow-same-origin allow-pointer-lock allow-forms allow-scripts"></iframe>
  </div>

  <script>
    // Load the website URL into the iframe
    document.getElementById("websiteFrame").src = websiteURL;

    // Function to close the Chromium window
    function closeWindow() {
      window.close();
    }
  </script>
</body>
</html>
